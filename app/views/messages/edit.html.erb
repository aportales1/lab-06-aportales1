<h1>Edit Message</h1>

<%= form_with model: @message, local: true do |form| %>
  <% if @message.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@message.errors.count, "error") %> prohibited this message from being saved:</h4>
      <ul>
        <% @message.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :body %>
    <%= form.text_area :body, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :chat_id %>
    <%= form.number_field :chat_id, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :user_id %>
    <%= form.number_field :user_id, class: "form-control" %>
  </div>

  <%= form.submit "Update Message", class: "btn btn-primary" %>
<% end %>
